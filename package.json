{
  "name": "ai-textbook-platform",
  "version": "1.0.0",
  "description": "Physical AI & Humanoid Robotics Textbook Platform",
  "private": true,
  "workspaces": [
    "website"
  ],
  "scripts": {
    "setup": "npm install && cd website && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd website && npm start",
    "dev:backend": "cd backend && python -m uvicorn src.main:app --reload",
    "build": "cd website && npm run build",
    "build:all": "npm run build && echo 'Backend build not needed'",
    "test": "cd backend && python -m pytest"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}